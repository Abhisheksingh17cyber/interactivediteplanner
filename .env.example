# INTERNITY DIET PLANNER - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/internity_diet_planner

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Maximum requests per window

# Security Configuration (Optional - for production)
# SESSION_SECRET=your-super-secret-session-key
# JWT_SECRET=your-jwt-secret-key

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password

# External API Keys (Optional - for future integrations)
# NUTRITION_API_KEY=your-nutrition-api-key
# GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# File Upload Configuration
MAX_FILE_SIZE=10485760    # 10MB in bytes
UPLOAD_PATH=./uploads

# PDF Generation Configuration
PDF_TEMP_PATH=./temp/pdfs
PDF_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Production Configuration (uncomment for production)
# TRUST_PROXY=true
# SECURE_COOKIES=true
# HTTPS_REDIRECT=true